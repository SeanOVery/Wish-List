{{!-- <p>THIS IS THE USERS PAGE</p> --}}

  <div class="container-fluid">
    <div class="row row-cols-3">
      <div class="col-4">
        <div class="card m-2">
          <div class="card-header">
            <h4>The Wish List!</h4>
          </div>
        </div>
        {{#each items as |item|}}
        <div class="card m-2">
          <div class="row g-0 d-flex align-items-center" style="height: 10rem">
            <div class="col-md-2">
              <img src="{{item.img_link}}" class="img-fluid rounded-start" alt="..." />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title card-title-overflow">{{item.item_name}}</h5>
                <p class="card-text card-description-overflow">{{item.description}}</p>
              </div>
            </div>
            <div class="col-md-2">
              <div class="card-body">
                <a href="{{item.purchase_link}}">Purchase Link</a>
                <p class="card-text">
                  <small class="text-muted">Added by: {{item.user.username}}</small>
                </p>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="col-4">
        <div class="card m-2">
          <div class="card-header">
            <h4>{{userName}}'s Wish List!</h4>
          </div>
        </div>
        {{#each list.items as |item|}}
        <div class="card m-2">
          <div class="row g-0 d-flex align-items-center" style="height: 10rem">
            <div class="col-md-2">
              <img src="{{item.img_link}}" class="img-fluid rounded-start" alt="..." />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title card-title-overflow">{{item.item_name}}</h5>
                <p class="card-text card-description-overflow">{{item.description}}</p>
              </div>
            </div>
            <div class="col-md-2">
              <div class="card-body">
                <a href="{{item.purchase_link}}">Purchase Link</a>
                <p class="card-text">
                  <small class="text-muted">Added by: {{item.user.username}}</small>
                </p>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="col-4">
        <div class="card m-2">
          <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title text-center">{{userName}}</h5>
            <a href="#" class="btn btn-light">Add user to favorites</a>
          </div>
        </div>
      </div>
    </div>
  </div>