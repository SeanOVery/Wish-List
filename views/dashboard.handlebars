  <div class="container-fluid">
    <div class="row row-cols-3">
      <div class="col-4">
        <div class="card m-2">
          <div class="card-header">
            <h4>The Wish List!</h4>
          </div>
          <div class="card-body">
            <h5 class="card-title">Click add to add items to your personal list!</h5>
          </div>
        </div>
        {{#each items as |item|}}
        <div class="card mb-3">
          <div class="row g-0 d-flex align-items-center" style="height: 10rem">
            <div class="col-md-2">
              <img src="{{item.img_link}}" class="img-fluid rounded-start" alt="..." />
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h5 class="card-title">{{item.item_name}}</h5>
                <p class="card-text">{{item.description}}</p>
              </div>
            </div>
            <div class="col-md-2">
              <div class="card-body">
                <a href="{{item.purchase_link}}">Purchase Link</a>
                <p class="card-text">

                  <small class="text-muted">Added by: {{item.user.name}}</small>
                </p>
              </div>
            </div>
            <div class="col-md-1">
              <button type="button" class="btn btn-primary btn-lg add" data-id="{{item.id}}">
                Add
              </button>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="col-4">
        <div class="card m-2">
          <div class="card-header">
            <h4>Your Wish List!</h4>
          </div>
          <div class="card-body">
            <h5 class="card-title">Click edit to edit or delete items to your personal list.</h5>
          </div>
        </div>
        {{#each userLists as |userList|}}
        <div class="card mb-3">
          <div class="row g-0 d-flex align-items-center" style="height: 10rem">
            <div class="col-md-2">
              <img src="{{userList.img_link}}" class="img-fluid rounded-start" alt="..." />
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h5 class="card-title">{{userList.item_name}}</h5>
                <p class="card-text">{{userList.description}}</p>
              </div>
            </div>
            <div class="col-md-2">
              <div class="card-body">
                <a href="{{userList.purchase_link}}">Purchase Link</a>
                <p class="card-text">
                  <small class="text-muted">Added by: {{userList.user.username}}</small>
                </p>
              </div>
            </div>
            <div class="col-md-1">
              <button type="button" class="btn btn-primary btn-lg">
                Edit
              </button>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="col-4">
        <div class="card">
          <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title text-center">{{name}}</h5>
            <a href="/additem" class="btn btn-primary">Add an item</a>
          </div>
        </div>
      </div>
    </div>
  </div>

<script src="/js/dashboard.js"></script>