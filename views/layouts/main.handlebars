<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Wish List</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <nav class='navbar navbar-expand-lg navbar-dark bg-primary'>
      <div class='container-fluid d-flex align-items-center'>
        <img src="/images/santaico.png" width="30" height="30"/> 
        <a class='navbar-brand m-2' href='/'>Not So Subtle Santa!</a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto'>
            {{#if logged_in}}
            <li class='nav-item'>
              <a
                class='nav-link active'
                aria-current='page'
                href='/dashboard'
              >Dashboard</a>
            </li>
            <li class='nav-item'>
              <button class='btn btn-outline-success' type='button' id='logout'>
                Log out
              </button>
            </li>
            {{else}}
            <li class='nav-item'>
              <a class='nav-link active' href='/login-signup'>Log in/Sign up</a>
            </li>
            {{/if}}
          </ul>
          <form class='d-flex search-form mb-0'>
            <input
              class='form-control'
              id='search-input'
              type='search'
              placeholder='Search for users'
              aria-label='Search'
            />
            <button class='btn btn-outline-light' type='submit'>Search</button>
          </form>
        </div>
      </div>
    </nav>
    <script src="/js/search.js"></script>

    {{{body}}}
    
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>